# vim as default
export EDITOR="vim"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# Docker
export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=/Users/cage/.boot2docker/certs/boot2docker-vm
export DOCKER_TLS_VERIFY=1

# The next line updates PATH for the Google Cloud SDK.
source '/Users/cage/google-cloud-sdk/path.bash.inc'

# The next line enables bash completion for gcloud.
source '/Users/cage/google-cloud-sdk/completion.bash.inc'

# GOPATH
export YOUR_OWN_GOPATH=/Users/cage/go
export GOPATH=$YOUR_OWN_GOPATH

# Add appengine go sdk
export GOOGLE_CLOUD_SDK=/Users/cage/google-cloud-sdk
export PATH=$GOOGLE_CLOUD_SDK/bin:/usr/local/go/bin:$PATH:$GOPATH/bin
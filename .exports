# vim as default
export EDITOR="vim"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# The next line updates PATH for the Google Cloud SDK.
source '/Users/cage/google-cloud-sdk/path.bash.inc'

# The next line enables bash completion for gcloud.
source '/Users/cage/google-cloud-sdk/completion.bash.inc'

# GOPATH
export YOUR_OWN_GOPATH=/Users/cage/go
# export GOPATH=$YOUR_OWN_GOPATH
export GOPATH=$YOUR_OWN_GOPATH:/Users/cage/google-cloud-sdk/platform/google_appengine/goroot

# Add appengine go sdk
export GOOGLE_CLOUD_SDK=/Users/cage/google-cloud-sdk
export PATH=$GOOGLE_CLOUD_SDK/platform/google_appengine:/usr/local/go/bin:$PATH:$GOPATH/bin

# Add gitbook ebook convert - calibre
export CALIBRE_PATH=/Applications/calibre.app/Contents/MacOS
export PATH=$PATH:$CALIBRE_PATH

# Add HOMEBREW_GITHUB_API_TOKEN
export HOMEBREW_GITHUB_API_TOKEN=871f41bf92037b4f3fc14009e59158a33fbd723a

# virtualenvwrapper
# http://virtualenvwrapper.readthedocs.org/en/latest/install.html
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Devel
source /usr/local/bin/virtualenvwrapper.sh